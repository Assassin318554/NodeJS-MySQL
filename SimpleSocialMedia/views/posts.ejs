<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="posts.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="post">
      <% for(var i = 0; i < posts.length; i++) { %>
      <h3><%= posts[i].Content %></h3>

      <!-- Reactions Section -->
      <div class="reactions">
        <button class="reaction-button">👍 Like</button>
        <button class="reaction-button">❤️ Love</button>
        <button class="reaction-button">😂 Haha</button>
        <button class="reaction-button">😡 Angry</button>
      </div>

      <!-- Comments Section -->
      <div class="comments">
        <h4>Comments</h4>
        <div class="comment">
          <p>This is a dummy comment.</p>
          <div class="comment-reactions">
            <button class="reaction-button">👍 Like</button>
            <button class="reaction-button">❤️ Love</button>
            <button class="reaction-button">😂 Haha</button>
            <button class="reaction-button">😡 Angry</button>
          </div>
        </div>

        <!-- Add new comment -->
        <div class="new-comment">
          <textarea placeholder="Write a comment..." rows="2"></textarea>
          <button class="submit-comment">Comment</button>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
