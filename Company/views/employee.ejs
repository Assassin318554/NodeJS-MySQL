<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Employee List</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Employee List</h1>
      <a href="/" class="bg-blue-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-600">
        Back to Login
      </a>
    </div>
    <table class="min-w-full bg-white border border-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">ID</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Name</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Email</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Joining Date</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Agreement Till</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Salary</th>
          <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Phone Number</th>
        </tr>
      </thead>
      <tbody>
        <% employee.forEach(emp => { %>
          <tr>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.id %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.name %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.email %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.joining_date.toLocaleDateString() %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.agreementTill.toLocaleDateString() %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700">$ <%= emp.salary.toFixed(2) %></td>
            <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-700"><%= emp.phone_number %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
