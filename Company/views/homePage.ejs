<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/homePage.css" />
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <div class="w-56 sidebar bg-gray-900">
      <div class="flex flex-col items-center mt-4">
        <ul class="flex flex-col w-full gap-3">
          <li>
            <a
              href="/homePage"
              class="flex items-center py-2 px-3 text-white hover:bg-gray-800 text-sm"
            >
              <i class="bi bi-speedometer2 text-lg mr-1"></i>
              <span class="hidden sm:inline">Dashboard</span>
            </a>
          </li>
          <li>
            <a
              href="/homePage/employee?dept_name=<%= admin.dept_name %>"
              class="flex items-center py-2 px-3 text-white hover:bg-gray-800 text-sm"
            >
              <i class="bi bi-people text-lg mr-1"></i>
              <span class="hidden sm:inline">Manage Employees</span>
            </a>
          </li>
          <li>
            <a
              href="/homePage/add-employee"
              class="flex items-center py-2 px-3 text-white hover:bg-gray-800 text-sm"
            >
              <i class="bi bi-person-plus text-lg mr-1"></i>
              <span class="hidden sm:inline">Add Employee</span>
            </a>
          </li>
          <li>
            <a
              href="/homePage/profile?id=<%= admin.id %>"
              class="flex items-center py-2 px-3 text-white hover:bg-gray-800 text-sm"
            >
              <i class="bi bi-person text-lg mr-1"></i>
              <span class="hidden sm:inline">Profile</span>
            </a>
          </li>
          <li class="cursor-pointer p-1 rounded-lg" type="submit">
            <a
              href="/logoutPage"
              class="flex items-center py-2 px-3 text-white hover:bg-gray-800 text-sm"
            >
              <i class="bi bi-power text-lg mr-1"></i>
              <span class="hidden sm:inline">Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
      <div class="flex justify-center items-center bg-gray-900 text-white py-3">
        <h1 class="text-xl font-serif">
          Welcome to your dashboard <%= admin.name %>
        </h1>
      </div>

      <div class="p-2">
        <div
          class="grid gap-3 md:grid-cols-2 lg:grid-cols-3"
          style="backdrop-filter: blur(200px)"
        >
          <div class="border p-3 rounded-lg shadow-md">
            <h5 class="text-sm font-semibold mb-4">Department</h5>
            <p class="text-xs"><%= admin.dept_name %></p>
          </div>
          <div class="border p-3 rounded-lg shadow-md">
            <h5 class="text-sm font-semibold mb-4">Employee</h5>
            <hr class="my-4" />
            <p class="text-xs">Total: <%= employees.length %></p>
          </div>
          <div class="border p-3 rounded-lg shadow-md">
            <h5 class="text-sm font-semibold mb-4">Salary</h5>
            <hr class="my-4" />
            <% let totalSalary = 0; %> <% employees.forEach(emp => { %> <%
            totalSalary += parseFloat(emp.salary); %> <% }) %>
            <p class="text-xs">Total: $ <%= totalSalary.toFixed(2) %></p>
          </div>
        </div>

        <h3
          class="text-lg bg-gradient-to-r from-purple-900 to-blue-900 text-white p-2 rounded-lg text-center font-semibold mt-2 mb-4 shadow-lg"
        >
          Your Employees
        </h3>

        <div class="grid gap-2 sm:grid-cols-2 lg:grid-cols-3">
          <% employees.forEach(emp => { %>
          <div
            class="rounded-lg shadow-md text-sm overflow-hidden transform transition-transform duration-300 ease-in-out"
          >
            <div class="bg-gradient-to-r from-purple-900 to-blue-900 p-2">
              <h4 class="text-xs font-semibold text-white mb-1">
                <%= emp.name %>
              </h4>
            </div>
            <div class="p-2" style="backdrop-filter: blur(200px)">
              <div class="flex justify-between mb-1">
                <p>ID:</p>
                <p class="text-xs"><%= emp.id %></p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Email:</p>
                <p class="text-xs"><%= emp.email %></p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Phone:</p>
                <p class="text-xs"><%= emp.phone_number %></p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Joining Date:</p>
                <p class="text-xs">
                  <%= emp.joining_date.toLocaleDateString() %>
                </p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Agreement Till:</p>
                <p class="text-xs">
                  <%= emp.agreementTill.toLocaleDateString() %>
                </p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Salary:</p>
                <p class="text-xs">$<%= emp.salary.toFixed(2) %></p>
              </div>
              <div class="flex justify-between mb-1">
                <p>Department:</p>
                <p class="text-xs"><%= admin.dept_name %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script>
      function handleLogout() {
        // Add your logout logic here
        console.log("Logout function triggered");
      }
    </script>
  </body>
</html>
